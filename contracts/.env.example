# BNB Testnet Deployment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# RPC Configuration
# ==========================================

# BNB Testnet RPC Endpoint (required)
# Default: https://data-seed-prebsc-1-b7a35f9.binance.org:8545
RPC_URL=https://data-seed-prebsc-1-b7a35f9.binance.org:8545

# Alternate RPC endpoints (optional backups):
# - https://data-seed-prebsc-2-b7a35f9.binance.org:8545
# - https://data-seed-prebsc-s3-b7a35f9.binance.org:8545

# ==========================================
# Account Configuration
# ==========================================

# Deployer address (the account that will deploy and own contracts)
# Must match the private key below
# Format: 0x... (42 characters)
DEPLOYER_ADDRESS=0x

# Private key (KEEP SECURE - Never commit to version control!)
# Format: Without "0x" prefix, 64 hex characters
# ⚠️  WARNING: This is sensitive data!
PRIVATE_KEY=

# ==========================================
# Optional Configuration
# ==========================================

# Network name (for logging/identification)
NETWORK_NAME=BNB_Testnet

# Chain ID (97 = BNB Testnet)
CHAIN_ID=97

# Gas configuration (optional)
GAS_PRICE=10000000000          # 10 gwei
GAS_LIMIT=3000000              # Adjust based on contract complexity

# Contract deployment configuration
VERIFY_ON_BSCSCAN=true         # Verify contracts on BscScan (requires API key)
BSCSCAN_API_KEY=               # Only needed if VERIFY_ON_BSCSCAN=true

# ==========================================
# Testnet Token Addresses (BNB Testnet)
# ==========================================
# These are commonly used test tokens on BNB testnet

# BscTestnet official test tokens:
USDC_TESTNET=0xB4FBF271143F901BF5EE8b0E99033aBEA4912312
WETH_TESTNET=0x8ba1f109551bD432803012645Ac136ddd64DBA72
WBTC_TESTNET=0x7afd064DaE57eaFa1dD3E3f9B9c1B98d1a7C9E1F
CAKE_TESTNET=0x8301F2213c0eeD49a7E28Ae4c3e91722919B8c63
LINK_TESTNET=0x84b9B910527Ad5C03A9Ca831909E21e236EA7b06
BUSD_TESTNET=0xeD24FC36203556a8c432d291370a88B00EA4e34C

# ==========================================
# Faucet Information
# ==========================================
# Get testnet tokens from:
# - BNB Testnet Faucet: https://testnet.binance.org/faucet-smart-chain
# - Official Testnet Faucets: Check BNB Chain docs

# ==========================================
# Optional: Etherscan/BscScan Configuration
# ==========================================
# For contract verification (if using Hardhat)
ETHERSCAN_API_KEY=

# ==========================================
# Logging Configuration
# ==========================================
DEBUG=false
LOG_LEVEL=info                 # debug, info, warn, error
